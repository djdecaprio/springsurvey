<div class="row-fluid">
  <div class="span12">
    <h1>Spring Surveys</h1>

    <table class="table table-condensed table-hover">  <tr>
      <th>Gender</th>
      <th>Ecnounters</th>
      <th>Age</th>
      <th>Credits</th>
      <th>Gpa</th>

    </tr>

      <% @surveys.each do |survey| %>
          <tr>
            <td><% if survey.gender == 1 %>
                  Chick
                  <% else %>
                  Dude
                  <% end %></td>
            <td><%= survey.ecnounters %></td>
            <td><%= survey.age %></td>
            <td><%= survey.credits %></td>
            <td><%= survey.gpa %></td>

          </tr>
      <% end %>
    </table>

    <br />

    <%= link_to 'New Survey', new_survey_path %>
  </div>
</div>